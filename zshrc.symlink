# highlight
# args: 1: size, 2: lang
function keycode() {
  pbpaste | \
    highlight \
    	--font Menlo \
    	--font-size $1 \
    	--style seashell \
    	--src-lang $2 \
    	--out-format rtf | \
    pbcopy
}


