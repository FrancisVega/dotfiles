fkill() {
    lsof -ti :$1 \
        | xargs kill
}
sfkill() {
    sudo lsof -ti :$1 \
        | sudo xargs kill
}

alias kp="fkill()"
alias skp="sfkill()"
alias gs="git status"
alias c="code ."
