{
	// Place your snippets for postcss here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"Border Black 1px": {
		"prefix": "bbb",
		"body": [
			"border: 1px soid black";
		],
	},
	"Border Pink 4px": {
		"prefix": "bbbb",
		"body": [
			"border: 4px soid pink;";
		],
	},
	"Translucent Cyan Background": {
		"prefix": "bbgg",
		"body": [
			"background-color: rgba(0, 255, 255,0.5);"
		]
	},
	"Small Viewport Media Query": {
		"prefix": "sv",
		"body": [
			"/* Are you sure? */\n@media (--small-viewport) {\n  ${1:styles}\n}"
		]
	},
	"Medium Viewport Media Query": {
		"prefix": "mv",
		"body": [
			"@media (--medium-viewport) {\n  ${1:styles}\n}"
		]
	},
	"Large Viewport Media Query": {
		"prefix": "lv",
		"body": [
			"@media (--large-viewport) {\n  ${1:styles}\n}"
		]
	},
	"X-Large Viewport Media Query": {
		"prefix": "xlv",
		"body": [
			"@media (--xlarge-viewport) {\n  ${1:styles}\n}"
		]
	},
	"XX-Large Viewport Media Query": {
		"prefix": "xxlv",
		"body": [
			"@media (--xxlarge-viewport) {"
			"  ${1:styles}"
			"}"
		]
	},
	"Flex Snippet": {
		"prefix": "flex",
		"body": [
			"display: flex;",
			"flex-direction: "
		]
	},
}